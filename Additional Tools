            }
            #current-reservations-wrapper {
                 min-height: 20px;
                 padding-bottom: 5px;
            }
            /* Adjusted: Reduced padding for empty reservations message */
            #current-reservations-empty-message {
                 text-align: center;
                 color: #888;
                 font-style: italic;
                 padding: 5px 0;
            }

            /* STATIC TIMESLOTS SECTION STYLING */
            #static-timeslots-container {
                 background-color: #f8f8f8;
